#include<stdio.h>

int input(int* a,int* b)
 {
  printf("Enter two numbers:\n");
   scanf("%d\n%d",*&a,*&b);
  return 0;
 } 

int compute(int* a,int* b)
 {
  int sum;
  sum = *a + *b;
  return sum;
 }
 
int output(int sum)
 {
  printf("The sum of the numbers are: %d",sum);
  return 0;
 }

int main(void) 
 {
  int a,b,sum;
  input(&a,&b);
  sum = compute(&a,&b);
  output(sum);
  return 0;
 }

  
  
