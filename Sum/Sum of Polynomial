#include<stdio.h>
void getnandx(int *n,int* x)
 {
  printf("Enter the number of terms:\n");
  scanf("%d",n);
  printf("Enter the value of x:\n");
  scanf("%d",x);
 }

int getcoeff(int n, int coeff[n])
 {
  int  i;
  printf("\nEnter the coefficients:\n");
  for(i=0;i<n;i++)
   {
    scanf("%d",&coeff[i]);
   }
  return 0;
 }

int indterm(int x,int n,int coeff[n], int ind[n])
 {
  int i;
  for(i=0;i<n;i++)
   {
    ind[i]=((coeff[i])*(x^i));
   }
  return 0; 
 }

int sumind(int n,int ind[n])
 {
  int i;
  long long int sum;
  for(i=0;i<n;i++)
   sum+=ind[i];
  return sum;
 }

int output(int sum)
 { 
  printf("The sum of the polynomial is: %d",sum);
  return 0;
 }

int main()
 {
  int n,x;
  getnandx(&n,&x);
  int coeff[n],indiv[n];
  getcoeff(n,coeff);
  indterm(x,n,coeff,indiv);
  int sum;
  sum = sumind(n,indiv);
  output(sum);
  return 0;
 }
  
