#include<stdio.h>

int input(int* a[],int* n)
 {
  printf("Enter the total number of numbers:\n");
  scanf("%d\n",*&n);
  printf("Enter the series of numbers:\n");
  for(int i=0;i<n;i++)
   {
    scanf("%d\n",*&a[i]);
   }
  return 0;
 }

int compute(int* a[],int* n)
 { 
  int sum=0;
  for(int i=0;i<n;i++)
   {
    sum+=*a[i];
   }
  return sum;
 }
 
int output(int sum)
 {
  printf("The sum of the given numbers is: %d\n",sum)
  return 0;
 }

int main(void)
 {
  int a[100],n,sum=0;
  input(&a,&n);
  sum=compute(&a,&n);
  output(sum);
  return 0;
 }

  
